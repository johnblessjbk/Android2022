<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context="USER.AddPatient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/FTOG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btnback"
                android:text="Fisrt"
                android:textColor="@color/white"
                android:textOff="-Patient"
                android:textOn="+Patient" />

            <ToggleButton
                android:id="@+id/STOG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:background="@drawable/btnback"
                android:text="Second"
                android:textColor="@color/white"
                android:textOff="-Medical"
                android:textOn="+Medical" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CARDFIRST"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_margin="20dp"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Patient ID"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="number"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:hint="Patient Name"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"

                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="textEmailAddress"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:hint="Patient Age"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"

                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:hint="Phone Number"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:hint="Address"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/paddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="textPostalAddress"
                    android:lines="5"
                    android:maxLines="5"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="315dp"
                android:hint="Patient Email"

                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="textEmailAddress"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/addpatientbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="173dp"
                android:padding="10dp"
                android:text="Add" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/SECCARD"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_margin="20dp">

            <Spinner
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:id="@+id/downid"
                android:layout_marginLeft="25dp"
                android:autofillHints="Select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-black"
                android:inputType="text"
                android:textSize="12dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:hint="Blood Group"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bloodgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="text"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:hint="Cholesterol"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"

                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Cholesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:hint="HB Count"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/hbcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:inputType="number"
                    android:maxLines="10"
                    android:textSize="12dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgview"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="250dp"
                    android:src="@drawable/imag_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                <ImageView
                    android:id="@+id/imggid"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="250dp"
                    android:src="@drawable/ic_baseline_image_24" />

                <ImageView
                    android:id="@+id/imgcamid"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="250dp"
                    android:src="@drawable/ic_baseline_flip_camera_ios_24" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="335dp"
                android:hint="Medical File Link"
                android:textColorHint="@color/black"
                app:endIconMode="clear_text"
                app:endIconTint="@color/teal_700"
                app:shapeAppearance="@style/Cut">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/medicallink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="sans-serif-black"
                    android:textSize="12dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/addmedicalbutton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="193dp"
                android:padding="10dp"
                android:text="Add" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>